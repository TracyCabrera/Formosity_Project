<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Formosity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/red</item>
        <item name="colorAccent">#FFFFFF</item>

        <item name="colorSecondary">#A86868</item>
        <item name="colorSecondaryVariant">#A86868</item>
        <item name="colorOnSecondary">#A86868</item>
    </style>

    <style name="Theme.Formosity" parent="Base.Theme.Formosity" />
    <style name="Theme.Formosity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Formosity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Formosity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>