<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/designbg"
    tools:context=".loginPage">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="119dp"
        android:layout_height="185dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F   O   R   M   O   S   I   T   Y"
        android:textColor="#D51E5D"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/shapeBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.696" />

    <View
        android:id="@+id/shapeBox"
        android:layout_width="351dp"
        android:layout_height="464dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="244dp"
        android:fontFamily="@font/black_regular"
        android:text="SIGN IN"
        android:textColor="#706D6D"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/shapeBox"
        app:layout_constraintStart_toStartOf="@+id/shapeBox"
        app:layout_constraintTop_toTopOf="@+id/shapeBox" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/epilogue_variablefont_wght"
        android:text="Sign in to your registered account"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/shapeBox1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shapeBox"
        app:layout_constraintTop_toTopOf="@+id/shapeBox" />

    <EditText
        android:id="@+id/shapeBox1"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/textbox"
        android:fontFamily="@font/epilogue_variablefont_wght"
        android:hint="Username"
        android:padding="10dp"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />

    <EditText
        android:id="@+id/shapeBox2"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/textbox"
        android:fontFamily="@font/epilogue_variablefont_wght"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <Button
        android:id="@+id/button2"
        android:layout_width="107dp"
        android:layout_height="44dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="116dp"
        android:text="Forgot password"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/shapeBox"
        app:layout_constraintEnd_toEndOf="@+id/shapeBox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shapeBox"
        app:layout_constraintTop_toTopOf="@+id/shapeBox"
        app:layout_constraintVertical_bias="0.611" />


</androidx.constraintlayout.widget.ConstraintLayout>