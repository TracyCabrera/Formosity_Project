<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/designbg"
    tools:context=".signin__login">

    <Button
        android:id="@+id/shapeBox3"
        android:layout_width="323dp"
        android:layout_height="62dp"
        android:fontFamily="@font/epilogue_variablefont_wght"
        android:text="Sign In"
        android:padding="10dp"
        android:textSize="19dp"
        android:textColor="@color/white"
        android:background="@drawable/textbox"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="445dp" />

    <TextView
        android:id="@+id/shapeBox4"
        android:layout_width="323dp"
        android:layout_height="62dp"
        android:fontFamily="@font/epilogue_variablefont_wght"
        android:text="Create new account"
        android:paddingTop="15dp"
        android:paddingLeft="60dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#A86868"
        android:background="@drawable/create_new"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="533dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="119dp"
        android:layout_height="185dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F   O   R   M   O   S   I   T   Y"
        android:textColor="#D51E5D"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="241dp" />
</androidx.constraintlayout.widget.ConstraintLayout>